current
  #info.emojis(if='{ opts.data != undefined }')
    p.current-container(onclick='{ copy }')
      span(class='emo emoji v-align s_{ opts.data.name.replace(/\\\\+/, "") }')
      input#currentInput.v-align(value=':{ opts.data.name }:')
    p
      span.tag.tag-blue { opts.data.unicode }
      span.tag.tag-green(each='{ key in opts.data.keywords }', onclick='{ parent.tagSearch }') { key }
      a(href='https://github.com/jgsme/emo/edit/master/src/data/emojis.custom.ja.json'): span.tag.tag-red Add new one?

  script(type='text/coffeescript').
    @copy = (event)=> document.getElementById('currentInput').select()
    @tagSearch = opts.tagsearch
